<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.baidu.mapapi.map.MapView android:id="@+id/bmapsView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true" />
    
    <RelativeLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:background="@drawable/title" >

       	 	<TextView
            	android:id="@+id/textViewYouhui"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerInParent="true"
            	android:gravity="center"
            	android:textSize="25dp"
            	android:textColor="#FFFFFF"
            	android:text="附近的优惠" />

        	<TextView
            	android:id="@+id/Nearby_back"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="10dp"
            	android:background="@drawable/back"
            	android:gravity="center"
            	android:clickable="true"
            	android:focusable="true"
            	android:textColor="#919191"
            	android:text="返回" />

        	<TextView
            	android:id="@+id/Nearby_Classification"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"
            	android:layout_marginRight="10dp"
            	android:background="@drawable/tltlerect"
            	android:gravity="center"
            	android:clickable="true"
            	android:focusable="true"
            	android:textColor="#919191"
            	android:text="分类" />
    	</RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/textViewCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/button_small_green"
            android:gravity="center"
            android:text="创建" />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/linearLayoutOptionMenu"
        android:layout_width="320dp"
        android:layout_height="127dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:visibility="gone"        
        android:background="@drawable/menu_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"            
            android:orientation="horizontal" >

            <TextView
                android:layout_weight="1"
                android:id="@+id/textViewxiche"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" 
                android:layout_centerVertical="true"
                android:background="@drawable/button_small_gray"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#000000"
                android:gravity="center"
                android:text="洗车" />
             <TextView
                  android:layout_weight="1"
                android:id="@+id/textViewTiemo"
                android:layout_width="75dp"
                android:layout_height="30dp"
                 android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" 
                android:layout_centerVertical="true"
                android:background="@drawable/button_small_gray"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#000000"
                android:gravity="center"
                android:text="贴膜" />
              <TextView
                   android:layout_weight="1"
                android:id="@+id/textViewDumo"
                android:layout_width="75dp"
                android:layout_height="30dp"
                 android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" 
                android:layout_centerVertical="true"
                android:background="@drawable/button_small_gray"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#000000"
                android:gravity="center"
                android:text="镀膜" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                 android:layout_weight="1"
                android:id="@+id/textViewDala"
                android:layout_width="75dp"
                android:layout_height="30dp"
                 android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" 
                android:layout_centerVertical="true"
                android:background="@drawable/button_small_gray"
                android:clickable="true"
                android:textColor="#000000"
                android:focusable="true"
                android:gravity="center"
                android:text="打蜡" />
             <TextView  android:layout_weight="1"
                android:id="@+id/textViewFengyou"
                android:layout_width="75dp"
                android:layout_height="30dp"
                 android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" 
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/button_small_gray"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#000000"
                android:gravity="center"
                android:text="封釉" />
              <TextView android:layout_weight="1"
                  android:visibility="invisible"
                android:id="@+id/textViewCreate"
                android:layout_width="75dp"
                android:layout_height="30dp"
                 android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" 
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/button_small_green"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="" />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewQuxiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" 
                android:background="@drawable/button_big_green"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:text="取消" />
            
             
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>