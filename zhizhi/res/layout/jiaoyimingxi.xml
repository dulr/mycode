<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_background" >

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            style="@style/backButton"
            android:text="@string/string_zhizhi_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/string_zhizhi_payfor_infor"
            android:textColor="@color/color_text_white"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/jiaoyimingxiList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewCong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="从"
                android:textColor="@color/color_text_black" />

            <EditText
                android:id="@+id/chushengnian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/textViewDao"
                android:layout_toRightOf="@+id/textViewCong" >
            </EditText>

            <TextView
                android:id="@+id/textViewDao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="到"
                android:textColor="@color/color_text_black" />

            <EditText
                android:id="@+id/chushengnian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/textViewDao" >
            </EditText>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewCong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="交易类型："
                android:textColor="@color/color_text_black" />

            <TextView
                android:id="@+id/textViewDao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="全部"
                android:textColor="@color/color_text_black" />

            <TextView
                android:id="@+id/textViewDao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="充值"
                android:textColor="#0000ff" />

            <TextView
                android:id="@+id/textViewDao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="收入"
                android:textColor="#0000ff" />

            <TextView
                android:id="@+id/textViewDao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="提现"
                android:textColor="#0000ff" />

            <TextView
                android:id="@+id/textViewDao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="消费"
                android:textColor="#0000ff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/xueshengpingyu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ziwojieshao"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/gexingqianming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2012.3.4 23:45 充值  200元  "
                android:textColor="@color/color_text_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gexingqianming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:gravity="right"
                android:text="余额1204.45元"
                android:textColor="@color/color_text_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gexingqianming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2012.3.14 12:32 收入 123元  "
                android:textColor="@color/color_text_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gexingqianming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:gravity="right"
                android:text="余额1327.45元"
                android:textColor="@color/color_text_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gexingqianming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2012.3.24 12:12 提现 1200元  "
                android:textColor="@color/color_text_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gexingqianming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:gravity="right"
                android:text="余额127.45元 "
                android:textColor="@color/color_text_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gexingqianming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2012.3.24 12:12 消费 100元   "
                android:textColor="@color/color_text_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gexingqianming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:gravity="right"
                android:text="余额27.45元"
                android:textColor="@color/color_text_black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gexingqianming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="共43条 上一页  第1 2 3...34页 下一页"
                android:textColor="@color/color_text_black"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jiaoyimingxiDetail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/gexingqianming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="流水号： 20120314232323"
            android:textColor="@color/color_text_black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/gexingqianming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="类型：充值"
            android:textColor="@color/color_text_black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/gexingqianming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="数额：1200"
            android:textColor="@color/color_text_black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/gexingqianming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="支付方式：支付宝"
            android:textColor="@color/color_text_black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/gexingqianming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="来自账号：james@17xie.com"
            android:textColor="@color/color_text_black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/gexingqianming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="时间：2012.3.14  12：34：32"
            android:textColor="@color/color_text_black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/gexingqianming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="余额：2342元"
            android:textColor="@color/color_text_black"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>