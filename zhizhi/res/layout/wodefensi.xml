<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_background" >

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            style="@style/backButton"
            android:text="@string/string_zhizhi_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/string_zhizhi_wodefensi"
            android:textColor="@color/color_text_white"
            android:textSize="18dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="已有93人关注你"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_text_black" />
    <!-- person -->

    <RelativeLayout
        android:id="@+id/personItem1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/title"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:focusable="true" >

        <ImageView
            android:id="@+id/personImage"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/u7_normal" />

        <LinearLayout
            android:id="@+id/personstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/personImage"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/stateImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/person_online" />

                <TextView
                    android:id="@+id/textView122222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/stateImage"
                    android:text="David。Lee"
                    android:textSize="16dp"
                    android:textColor="@color/color_text_black" />

                <TextView
                    android:id="@+id/dengjiImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:text="我后天下午在线"
                    android:textColor="@color/color_text_black" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/textView122"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="美国人，擅长TOEFL口语"
                    android:textColor="#8F8F8F" />

                <TextView
                    android:id="@+id/textView133333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:background="@drawable/u38_normal"
                    android:gravity="right" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff" />

    <!-- person -->

    <RelativeLayout
        android:id="@+id/personItem2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/title"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:focusable="true" >

        <ImageView
            android:id="@+id/personImage"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/u21_normal" />

        <LinearLayout
            android:id="@+id/personstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/personImage"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/stateImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/person_online" />

                <TextView
                    android:id="@+id/textView122222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/stateImage"
                    android:text="James"
                    android:textSize="16dp"
                    android:textColor="@color/color_text_black" />

                <TextView
                    android:id="@+id/dengjiImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="今天天气真好"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/color_text_black" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/textView122"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="英国人，擅长雅思口语"
                    android:layout_marginTop="10dp"
                    android:textColor="#8F8F8F" />

                <ImageView
                    android:id="@+id/textView133333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:background="@drawable/u40_normal"
                    android:gravity="right" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff" />
    <!-- person -->

    <RelativeLayout
        android:id="@+id/personItem3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/title"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:focusable="true" >

        <ImageView
            android:id="@+id/personImage"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/u23_normal" />

        <LinearLayout
            android:id="@+id/personstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/personImage"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/stateImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/person_online" />

                <TextView
                    android:id="@+id/textView122222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/stateImage"
                    android:text="David。Lee"
                    android:textSize="16dp"
                    android:textColor="@color/color_text_black" />

                <TextView
                    android:id="@+id/dengjiImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="你们好"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/color_text_black" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/textView122"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="美国人，擅长TOEFL口语"
                    android:layout_marginTop="10dp"
                    android:textColor="#8F8F8F" />

                <ImageView
                    android:id="@+id/textView133333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:background="@drawable/u38_normal"
                    android:gravity="right"
                    android:scaleType="fitEnd" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/gexingqianming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="共43条 上一页                    下一页"
        android:textColor="@color/color_text_black"
        android:textSize="20dp" />

</LinearLayout>